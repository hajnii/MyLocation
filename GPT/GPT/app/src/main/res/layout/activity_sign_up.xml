<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUp.SignUpActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:text="회원 가입"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        >

        <EditText
            android:id="@+id/signUp_editId"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ID@email.com"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/signUp_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/selectEmail"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/signUp_checkEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email 인증하기"
        android:layout_marginLeft="20dp"
        android:background="#3A9AE6"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/signUp_editPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password Input"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="8~14자 영문 대 소문자, 숫자, 특수문자를 사용하세요."
        android:gravity="center"
        />


    <EditText
        android:id="@+id/signUp_editPasswordCheck"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:hint="Password Check"
        android:ems="10"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        >


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="약관 설명란 "
            />

    </ScrollView>
    <CheckBox
        android:id="@+id/signUp_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약관에 동의 하겠습니까?"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/signUp_btnSignUp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#3A9AE6"
        android:hapticFeedbackEnabled="false"
        android:text="회원가입" />


</LinearLayout>